<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>



    <!--指定数据库连接属性文件-->
    <properties resource="application.properties"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!--去掉注释-->
        <commentGenerator >
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!--连接数据库-->
        <jdbcConnection driverClass="${spring.datasource.driver-class-name}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--指定pojo生成位置,targetProject为你项目指定的根路径，即src/main/java或src/main/resources-->
        <javaModelGenerator targetPackage="pojo" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />

        </javaModelGenerator>

        <!--指定mapper.xml生成位置-->
        <sqlMapGenerator targetPackage="mybatis.mappers" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--指定mapper.java生成位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="mappers"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="dept" domainObjectName="Dept" >
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="dept_no" sqlStatement="Mysql" identity="true" />

        </table>
    </context>
</generatorConfiguration>